<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="top.anets.dao.PayInfoDao">
	<select id="getAllPayinfos"
		resultType="top.anets.domain.Payinfo">
		select * from payInfo
	</select>


	<select id="selectByOrderId"
		resultType="top.anets.domain.Payinfo">
		select * from payInfo where order_id = #{orderId}
	</select>
	<insert id="insert" useGeneratedKeys="true" keyProperty="id">
		insert into payInfo
		(id,order_id,amount,pay_type,status,create_time,finish_time) values
		(#{id},#{orderId},#{amount},#{payType},#{status},#{createTime},#{finishTime})
	</insert>

	<update id="update" parameterType="top.anets.domain.Payinfo">
		UPDATE payInfo
		<set>
				status = #{status},
				finish_time = #{finishTime}
		</set>
		<where>
		    id = #{id}
		</where>
	</update>

</mapper>






